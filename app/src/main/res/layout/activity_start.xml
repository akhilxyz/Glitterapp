<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".StartActivity">


    <ImageView
        android:id="@+id/glitter_logo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/glitt" />

    <ImageView
        android:id="@+id/glitter_txt"
        android:layout_width="260dp"
        android:layout_height="60dp"
        android:layout_below="@+id/glitter_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-46dp"
        android:layout_marginBottom="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/gllitter_logo" />

    <TextView
        android:layout_below="@+id/glitter_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:textColor="#474559"
        android:lineSpacingExtra="31sp"
        android:text="Please wait..."
        />



</RelativeLayout>